  "position": "bottom",
  "height": 40,
  "spacing": 4,
  "margin-bottom": 5,
  "margin-left": 30,
  "margin-right": 30,
  "modules-left": [
    "hyprland/workspaces",
    "idle_inhibitor"
  ],
  "modules-center": [
    "custom/media"
  ],
  "modules-right": [
    "bluetooth",
    "backlight",
    "custom/weather",
    "disk",
    "custom/uptime",
    "custom/power"
  ],
  "hyprland/workspaces": {
